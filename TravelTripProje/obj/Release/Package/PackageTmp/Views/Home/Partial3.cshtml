@using TravelTripProje.Models.Entity
@model List<Blog>

<div class="padding">
    <h4>En Populer 10 Blog</h4>
    <ul class="list list-pad">
        @{ int i = 0; }

        @foreach (var item in Model.Take(10))
        {
            <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a></li>
        }

    </ul>
    <a href="/Blog/Index" class="link1">Tum Bloglari Gor</a>
</div>
