@model TravelTripProje.Models.Entity.BlogYorum
@{

    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>
    @foreach (var item in Model.deger1)
    {
        <title> @item.Baslik | Travel Trip Proje</title>

    }
    <link href="~/Template/blog/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Template/blog/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Template/blog/css/style.css" rel="stylesheet" />
    <script src="~/Template/blog/js/easing.js"></script>
    <script src="~/Template/blog/js/jquery.min.js"></script>
    <script src="~/Template/blog/js/move-top.js"></script>
    <link href="~/Template/blog/css/style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/Template/blog/js/move-top.js"></script>
    <script type="text/javascript" src="~/Template/blog/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>
    <!---->

</head>
<body>
    <!---header---->
    <div class="header">

    </div>
    <!--/header-->
    <div class="single">

        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">

                    <div class="recent" style="position: relative; left: 800px">
                        <h3>Son Yazilar</h3>

                        @Html.Action("SonYazilarPartial", "Blog")
                    </div>

                    <div class="comments" style="position: relative; left: 800px">
                        <h3>Son Yorumlar</h3>
                        @Html.Action("SonYorumlarPartial", "Blog")
                    </div>
                    <div class="clearfix"></div>
                    <div class="archives" style="position: relative; left: 800px">
                        <h3>Arşiv</h3>

                        @Html.Action("ArsivPartial", "Blog")
                    </div>
                    <div class="clearfix"></div>
                    <div style="position: relative; bottom:39em;">
                        @foreach (var x in Model.deger1)
                        {<img src="@x.BlogImage" style="width: 730px; height: 350px;" alt="" />
                            <h2>@x.Baslik</h2>
                            <p>
                                @x.Aciklama
                            </p>
                        }


                        @foreach (var item in Model.deger2)
                        {
                            <ul class="comment-list">


                                <li>
                                    <img src="~/Template/blog/images/avatar.png" class="img-responsive" alt="">
                                    <div class="desc">
                                        <p><b>@item.KullaniciAdi:</b> @item.Yorum </p>
                                    </div>
                                    <div class="clearfix"></div>
                                </li>


                            </ul>
                        }

                        @Html.Action("YorumYap", "Blog")
                    </div>

                    @*<div class="col-md-auto side-content">
                            <div class="recent">
                                <h3>Son Yazilar</h3>

                                @Html.Action("SonYazilarPartial", "Blog")
                            </div>

                            <div class="comments">
                                <h3>Son Yorumlar</h3>
                                @Html.Action("SonYorumlarPartial", "Blog")
                            </div>
                            <div class="clearfix"></div>
                            <div class="archives">
                                <h3>Arşiv</h3>

                                @Html.Action("ArsivPartial", "Blog")
                            </div>
                        <div class="clearfix"></div>*@
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
</body>
</html>





