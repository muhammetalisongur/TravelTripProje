@using TravelTripProje.Models.Entity
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" style="width:300px; height:150px" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">Tarih: @x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.Aciklama@*.Substring(0,100)*@...</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamini Oku >></span></a></p>
            </div>
        </div>
    }
   
    @Html.Action("Partial2","Home")

    <div class="clear"></div>
</div>