@using TravelTripProje.Models.Entity
@model List<Blog>

@foreach (var item in Model)
{
    <div class="right">

        <div class="bot-left">
            <img src="@item.BlogImage" style="width:300px; height:150px" alt="" />
        </div>
        <div class="left-text">

            <h4>@item.Baslik</h4>
            <span class="doller">Tarih: @item.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@item.Aciklama@*.Substring(0, 100)*@...</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamini Oku >></span></a></p>
        </div>
    </div>
}