
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>Admin Paneli</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Kapat &times;
        </button>
        <a href="/Admin/Index" class="w3-bar-item w3-button w3-hover-green">Bloglar</a>
        <a href="#" class="w3-bar-item w3-button w3-hover-blue">Yorumlar</a>
        <a href="#" class="w3-bar-item w3-button w3-hover-orange">Iletisim</a>
        <a href="#" class="w3-bar-item w3-button w3-hover-cyan">Hakkimizda</a>
    </div>

    <div id="main">

        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container">
                <h1>Admin Yonetim Paneli</h1>
            </div>
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "15%";
            document.getElementById("mySidebar").style.width = "15%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
    </script>

</body>
</html>
