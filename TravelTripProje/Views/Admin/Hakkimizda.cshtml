@model List<TravelTripProje.Models.Entity.Hakkimizda>
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Hakkımızda</h2>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th style=" text-align: center; height: 3%; width: 3%;">ID</th>
            <th>Hakkımızda</th>
            <th style=" text-align: center;  width: 9%;">Fotograf</th>
            <th style=" text-align: center;width: 7%;">Sil</th>
            <th style=" text-align: center;  width: 9%;">Guncelle</th>
            <th style=" text-align: center;  width: 9%;">Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th style=" text-align: center; height: 3%; width: 3%;">@item.ID</th>
                <th>@item.Aciklama</th>
                <th><img src="@item.FotoUrl" width="160" height="80" style=" display: block; margin-left: auto; margin-right: auto;" /></th>

                <th style=" text-align: center;width: 7%;"><a href="/Admin/HakkimizdaSil/@item.ID" class="btn btn-danger">Sil</a></th>
                <th style=" text-align: center;  width: 9%;"><a href="/Admin/HakkimizdaGetir/@item.ID" class="btn btn-warning">Guncelle</a></th>
                <th style=" text-align: center;  width: 9%;"><a href="/About/Index" class="btn btn-dark">Detay</a></th>
            </tr>

        }
    </tbody>
</table>
<a href="/Admin/YeniHakkimizda" class="btn btn-primary" onclick="return confirm('Mevcut varsa ekleme yapmayın sadece o tabloyu düzenleyiniz')">Yeni Hakkimizda Ekle</a>

